@using MVCSTOK.Models.Entity;
@model List<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>ÜRÜN MARKASI</th>
            <th>ÜRÜN KATEGORİSİ</th>
            <th>ÜRÜN FİYATI</th>
            <th>ÜRÜN STOĞU</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var items in Model)
        {
            <tr>
                <th>@items.UrunId</th>
                <td>@items.UrunAd</td>
                <td>@items.Marka</td>
                <td>@items.Tbl_Kategori.KategoriAd</td>
                <td>@items.Fiyat</td>
                <td>@items.Stok</td>
                <td><a href="/Urunler/SIL/@items.UrunId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urunler/UrunGetir/@items.UrunId" class="btn btn-warning">GÜNCELLE</a></td>
            </tr>

        }
    </tbody>

</table>
<a href="/Urunler/YENIURUN/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }
    });
</script>

