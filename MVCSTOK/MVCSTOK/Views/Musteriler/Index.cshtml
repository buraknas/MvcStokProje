@using MVCSTOK.Models.Entity;
@model List<Tbl_Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteriler", FormMethod.Get))
{
<p>
    ARANACAK MÜŞTERİ ADI:@Html.TextBox("p");
    <input type="submit" value="Ara" />
</p>
    }
    <table class="table table-bordered">
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ ADI</th>
            <th>MÜŞTERİ SOYADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>Sil Alert</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.MusteriId</th>
                    <td>@item.MusteriAd</td>
                    <td>@item.MusteriSoyad</td>
                    <td><a href="/Musteriler/SIL/@item.MusteriId" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Musteriler/MusteriGetir/@item.MusteriId" class="btn btn-warning">GÜNCELLE</a></td>
                    <td>@Html.ActionLink("SİL", "SIL", new { id = item.MusteriId }, new { @class = "btn btn-info", onclick = "return confirm('İşlemi Gerçekten Onaylıyormusunuz?')" })</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Musteriler/MusteriEkle/" class="btn btn-primary">MÜŞTERİ KAYIT</a>
